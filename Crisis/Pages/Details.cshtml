@page
@model Crisis.DetailsModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

    <div>
        <h4>Supplier</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Supplier.SupplierNo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Supplier.SupplierNo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Supplier.CreateDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Supplier.CreateDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Supplier.Creator)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Supplier.Creator)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Supplier.Category)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Supplier.Category.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Supplier.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Supplier.Status.Description)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-page="./Edit" class="btn btn-warning" asp-route-id="@Model.Supplier.Id">Edit</a> |
        <a asp-page="./Index" class="btn btn-primary">Back to List</a> |
        <a href="http://hondaweb-sso.ahm.am.honda.com/?target=https%3A%2F%2Fhondaweb.com%2FSAPBI%2FBOE%2FOpenDocument%2Fopendoc%2FopenDocument.jsp%3FiDocID%3DAaEW5VZqs3xCvR_MpL6jq9w%26sIDType%3DCUID" class="btn btn-dark">Part List</a>
    </div>

    <hr />
    <h4>Comments</h4>
    <hr />

    <p>
        <a asp-page="./Comments/Create" asp-route-SupplierId="@Model.Supplier.Id" class="btn btn-success">Create New</a>
    </p>
    <table id="table" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Comment[0].CreateDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comment[0].Creator)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comment[0].Body)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Comment)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Creator)
                    </td>
                    <td>
                        <a asp-page="Comments/Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Body)</a>
                    </td>
                    <td>
                        <a asp-page="Comments/Delete" class="btn btn-danger" asp-route-id="@item.Id">Hide</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
