@page
@model Crisis.DetailsModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

    <div>
        <h4>Supplier</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Supplier.SupplierNo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Supplier.SupplierNo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Supplier.CreateDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Supplier.CreateDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Supplier.Creator)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Supplier.Creator)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Supplier.Category)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Supplier.Category.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Supplier.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Supplier.Status.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Supplier.ReopenDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Supplier.ReopenDate)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-page="./Edit" class="btn btn-warning" asp-route-id="@Model.Supplier.Id">Edit</a> |
        <a asp-page="./Index" class="btn btn-primary">Back to List</a> |
        <a href="http://hondaweb-sso.ahm.am.honda.com/?target=https%3A%2F%2Fhondaweb.com%2FSAPBI%2FBOE%2FOpenDocument%2Fopendoc%2FopenDocument.jsp%3FiDocID%3DAaEW5VZqs3xCvR_MpL6jq9w%26sIDType%3DCUID" class="btn btn-dark">Part List</a>
    </div>

    <hr />
    <h4>Comments</h4>
    <hr />

    <table id="CommentTable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Supplier.Comments[0].CreateDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Supplier.Comments[0].Creator)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Supplier.Comments[0].Body)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Supplier.Comments)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Creator)
                </td>
                <td>
                    <a asp-page="Comments/Edit" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Body)</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

    <hr />
    <h4>Calls</h4>
    <hr />

    <table id="CallTable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Supplier.Calls[0].Creator)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Supplier.Calls[0].CreateDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Supplier.Calls[0].Contact)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Supplier.Calls[0].Body)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Supplier.Calls[0].CallResponse)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Supplier.Calls)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Creator)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    <a asp-page="./Calls/Edit" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Contact)</a>
</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Body)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CallResponse.Description)
                </td>
            </tr>
            }
        </tbody>
    </table>

    <hr />
    <h4>Attachments</h4>
    <hr />

    <table id="AttachmentTable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Supplier.Attachments[0].AttachmentType.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Supplier.Attachments[0].FilePath)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Supplier.Attachments) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AttachmentType.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FilePath)
                </td>
            </tr>
}
        </tbody>
    </table>
</body>
</html>
