@page
@model Crisis.Pages.Calls.IndexModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table id="SupplierTable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Call[0].Creator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Call[0].CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Call[0].Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Call[0].Body)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Call[0].CallResponse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Call[0].Supplier)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Call) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Creator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Body)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CallResponse.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.Creator)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
