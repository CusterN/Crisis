@page
@model Crisis.Pages.Comments.IndexModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <a asp-page="Create" class="btn btn-success">Create New</a>
        <a asp-page="Index" asp-route-all="@true" class="btn btn-dark">Hidden</a>
    </p>
<table id="table" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].Creator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].Supplier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].Body)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Comment)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Creator)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supplier.SupplierNo)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Body)</a>
                </td>
                <td>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Hide</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</body>
</html>
