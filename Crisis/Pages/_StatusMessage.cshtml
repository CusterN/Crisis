@model string

@if (!String.IsNullOrEmpty(@Model))
{
    var statusMessageClass = Model.StartsWith("Error") ? "danger" : "success";
    <div class="alert alert-@statusMessageClass alert-dismissible fade show" role="alert" style="padding-top:7px;padding-bottom:7px;">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="padding-top:5px;padding-bottom:10px;"><span aria-hidden="true">&times;</span></button>
        @Model
    </div>
}